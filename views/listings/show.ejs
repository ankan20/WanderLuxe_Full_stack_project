<% layout("/layouts/boilerplate") %>
<body>
  <div class="container">
    <div class="row mt-3">
      <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
        <h3 class="offset-md-2"><%=listing.title%></h3>
      </div>
      <div
        class="card col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 show-card listing-card"
      >
        <img
          src="<%=listing.image%>"
          class="card-img-top show-img"
          alt="Listing_image"
        />
        <div class="card-body">
          <p class="card-text"><b>Owned by </b><%=listing.owner.username%></p>
          <p class="card-text">
            <b>Description </b> <%=listing.description%> 
          </p>
          <p class="card-text">
            <b>Price </b> &#8377; <%=listing.price.toLocaleString("en-IN")%>
            
          </p>
          <p class="card-text"><b>Location </b> <%=listing.location%> </p>
          <p class="card-text"><b>Country </b> <%=listing.country%></p>
        </div>
      </div>
    </div>
    <% if(currUser && currUser._id.equals(listing.owner._id) ){ %>
    <div class="row mt-3">
      <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 btns">
        <a
          href="/listings/<%=listing._id%>/edit"
          class="btn btn-dark col-6 col-md-4 edit-btn"
          >Edit</a
        >
        <form
          action="/listings/<%=listing._id%>?_method=DELETE"
          method="post"
          class="col-6 col-md-4"
        >
          <button class="btn btn-dark col-12">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
    <div class="col-8 offset-3 mb-3">
      <hr />
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%=listing._id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label"> Rating </label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
            placeholder="write a comment"
          ></textarea>
          <div class="invalid-feedback">Please write a comment</div>
        </div>
        <br />
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(let review of listing.reviews ){ %>

        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Ankan Das</h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text"><%=review.rating%></p>
          </div>
          <form
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
            class="mb-3"
            method="post"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>

        <% } %>
      </div>
    </div>
  </div>
</body>
